<div class="friends-page-content">
  <div class="content-title-container">
    <span class="mdi mdi-account-multiple"></span>
    <h2>Friends</h2>
  </div>

  <% if friendships.empty? %>
    <p>No friends to show.</p>
  <% else %>
    <ul class="friends-list">
      <% friendships.each do |friendship| %>
        <li class="friend-card-item">
          <%= image_tag friendship.friend.avatar, class: "profile-pic" %>
          <%= link_to friendship.friend.name, user_path(username: friendship.friend.username) %>
          <%# button_to friendship %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>