<%= turbo_frame_tag "new_post_frame" do %>
  <div class="post-container placeholder">
    <%= image_tag current_user.avatar, class: "profile-pic-icon" %>
    <% if browser.device.mobile? %>
      <a href="posts/new" class="post-text-placeholder">What's on your mind?</a>
    <% else %>
      <a href="posts/new" class="post-text-placeholder">What's on your mind, <%= current_user.name %>?</a>
    <% end %>
  </div>
<% end %>