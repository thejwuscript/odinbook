<div class="received-requests-container">

  <h3>Received Requests</h3>
  <hr>
  
  <% if received_requests.empty? %>
    <p>No requests to show.</p>
  <% else %>
    <ul class="friend-requests-list">
      <% received_requests.each do |request| %>
        <li class="friend-request-card-item">
          <%= image_tag request.requester.avatar, class: "profile-pic-icon" %>
          <div class="card-item-middle">
            <%= link_to request.requester.name, user_path(username: request.requester.username) %>
          </div>
          <div class="card-item-right">
            <%= button_to "Confirm", friendships_path, class: "confirm", form: { style: "display: inline-block" }, params: { request_id: request, friend_id: request.requester } %>
            <%= button_to "Delete", friend_request_path(request), class: "delete", method: :delete, form: { style: "display: inline-block" } %>
          </div>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>