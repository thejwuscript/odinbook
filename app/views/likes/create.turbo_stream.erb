<%= turbo_stream.update "post-likes-#{@post.id}", partial: "posts/like_count_line", locals: { like_count: @post.likes.count } %>
<%= turbo_stream.replace "like-button-#{@post.id}" do %>
  <%= button_to like_path(id: @like), method: :delete, params: { post_id: @post.id, like_id: @like.id }, form: { id: "like-button-liked-#{@post.id}" } do %>
    <span class="mdi mdi-thumb-up"></span>Like
  <% end %>
<% end %>