<header>
  <div class="logo-container">
    <%= link_to "Odinbook", root_path, class: "logo" %>
  </div>

  <div class="header-right" data-controller="menu">
    <%= render partial: "shared/notification", locals: {unread_count: @unread_count, notifications: @notifications} %>
      <div class="profile-pic-icon-container">
        <%= image_tag current_user.avatar, class: "profile-pic-icon", title: "Account", data: {action: "click->menu#toggleMenu"} %>
        <div class="after" data-action="click->menu#toggleMenu"></div>
      </div>
      <div class="account-menu" data-menu-target="menu">
        <%= button_to destroy_user_session_path, method: :delete, class: "logout", data: { turbo: false } do %>
          <span class="mdi mdi-logout"></span>Log Out
        <% end %>
        <%= button_to user_registration_path, data: { turbo: false }, method: :delete, class: "delete-account", onclick: "if (!window.confirm('Are you sure you want to delete your account?')) event.preventDefault()" do %>
          <span class="mdi mdi-account-remove"></span>Delete Account
        <% end %>
      </div>
    <%= link_to menu_path, class: 'menu-link' do %>
      <span class="mdi mdi-menu"></span>
    <% end %>
  </div>
</header>