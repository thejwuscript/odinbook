<header>
  <nav class="topnav">
    <div class="topnav-left">
      <%= link_to "O", root_path, class: "logo" %>
    </div>
    <%# <a href="https://www.flaticon.com/free-icons/alphabet" title="alphabet icons">Alphabet icons created by Freepik - Flaticon</a> %>
    <ul>
      <li>
      <% if current_page?(root_path) %>
        <%= link_to tag.span(class: "mdi mdi-home"), root_path, title: "Home", class: "active" %>
      <% else %>
        <%= link_to tag.span(class: "mdi mdi-home-outline"), root_path, title: "Home" %>
      <% end %>
      </li>
      <li>
      <% if current_page?("/#{current_user.username}") %>
         <%= link_to tag.span(class: "mdi mdi-account"), "/#{current_user.username}", title: "Profile", class: "active" %>
      <% else %>
        <%= link_to tag.span(class: "mdi mdi-account-outline"), "/#{current_user.username}", title: "Profile" %>
      <% end %>
      </li>
      <li>
      <% if current_page?(friends_path) || current_page?(friend_requests_path) %>
        <%= link_to tag.span(class: "mdi mdi-account-multiple"), friends_path, title: "Friends", class: "active" %>
      <% else %>
        <%= link_to tag.span(class: "mdi mdi-account-multiple-outline"), friends_path, title: "Friends" %>
      <% end %>
      </li>
      <li>
      <% if current_page?(users_path) %>
        <%= link_to tag.span(class: "mdi mdi-account-group"), users_path, title: "All Users", class: "active" %>
      <% else %>
        <%= link_to tag.span(class: "mdi mdi-account-group-outline"), users_path, title: "All Users" %>
      <% end %>
      </li>
    </ul>
    <div class="topnav-right" data-controller="menu">
      <%= render partial: "shared/notification", locals: {unread_count: @unread_count, notifications: @notifications} %>
      <%= image_tag current_user.avatar, class: "profile-pic-icon", title: "Account", data: {action: "click->menu#toggleMenu"} %>
      <div class="account-menu" data-menu-target="menu">
        <%= button_to destroy_user_session_path, method: :delete, class: "logout", form: {  data: { turbo: :false } } do %>
          <span class="mdi mdi-logout"></span>Log Out
        <% end %>
      </div>
    </div>
  </nav>
</header>